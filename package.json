{
  "name": "server",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "npm-run-all -p nodemon client",
    "nodemon": "nodemon --exec 'ts-node src/app.ts'",
    "client": "npm run start --prefix src/client",
    "build": "npm test && gulp build",
    "mocha": "export NODE_ENV=test || SET \"NODE_ENV=test\" && mocha -r ts-node/register --exit src/**/*.test.ts || exit 0",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "test": "npm run lint && npm run mocha",
    "test:watch": "nodemon --exec 'npm run mocha'",
    "clean": "rm -r dist && echo '\\033[0;33m remove dist folder \\033[0m' || exit 0",
    "heroku-prebuild": "echo This runs before Heroku installs your dependencies.",
    "heroku-postbuild": "npm test && npm run build",
    "deploy": "deployBranch=deploy-`\"\"date +%Y-%m-%d-%H-%M\"\"`&& git checkout master -b $deployBranch && sed -i .bak -e 1d .gitignore && npm run build &&  git add . && git commit -m 'build deploy folder' && git push -u origin HEAD && git push heroku `git subtree split --prefix dist $deployBranch`:master --force && git checkout master"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts"
  },
  "engines": {
    "node": "8.9.4"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^5.0.10",
    "passport": "^0.4.0",
    "passport-google-oauth2": "^0.1.6",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/chai": "^4.1.2",
    "@types/cookie-session": "^2.0.34",
    "@types/express": "^4.11.1",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/mocha": "^2.2.48",
    "@types/mongoose": "^5.0.7",
    "@types/passport": "^0.4.3",
    "@types/passport-google-oauth2": "^0.1.2",
    "@types/supertest": "^2.0.4",
    "@types/validator": "^9.4.0",
    "chai": "^4.1.2",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-typescript": "^4.0.1",
    "gulp-util": "^3.0.8",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "supertest": "^3.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "description": ""
}